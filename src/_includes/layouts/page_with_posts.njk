---
layout: layouts/base.njk
# Use the below pattern
# pagination:
#  data: collections.posts_$LOCALE
#  size: 10
#  reverse: true
#  alias: posts
---

{{ content | safe }}


<hr />
<h2 class="leading-normal break-words" >{{ site[locale].articles }}</h2>
{% for post in posts %}
  <article>
    <h3>
      <a href="{{ site.rootPath }}{{ post.url | url }}">{{ post.data.title }}</a>
    </h3>
    {{ post.date | formatDate("LL", locale) }}
  </article>
{% endfor %}
